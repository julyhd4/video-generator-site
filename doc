<body>

  <h1>üé¨ Video Generator</h1>

  <div class="form-container">
    <form id="videoForm">
      <input type="text" id="prompt" placeholder="Enter your video prompt..." required />
      <select id="duration">
        <option value="5">5 seconds</option>
        <option value="10">10 seconds</option>
        <option value="15" selected>15 seconds</option>
        <option value="20">20 seconds</option>
      </select>
      <button type="submit">Generate Video</button>
    </form>
    <div id="status"></div>
  </div>

  <div id="videoContainer"></div>

  <script>
    const form = document.getElementById('videoForm');
    const statusDiv = document.getElementById('status');
    const videoContainer = document.getElementById('videoContainer');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      statusDiv.textContent = "Sending request...";
      videoContainer.innerHTML = "";

      const prompt = document.getElementById('prompt').value;
      const duration = document.getElementById('duration').value;

      try {
        const response = await fetch("http://localhost:3001/api/tasks", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ prompt, duration })
        });

        const data = await response.json();
        const taskId = data.taskId;
        statusDiv.textContent = "Waiting for video to be ready...";

        const pollTask = async () => {
          const res = await fetch(`http://localhost:3001/api/tasks/${taskId}`);
          const taskData = await res.json();

          if (taskData.status === "completed") {
            statusDiv.textContent = "‚úÖ Video is ready!";
            const video = document.createElement("video");
            video.src = taskData.videoUrl;
            video.controls = true;
            videoContainer.appendChild(video);
          } else if (taskData.status === "failed") {
            statusDiv.textContent = "‚ùå Video generation failed.";
          } else {
            setTimeout(pollTask, 2000);
          }
        };

        pollTask();
      } catch (err) {
        console.error(err);
        statusDiv.textContent = "Error sending request.";
      }
    });
  </script>

</body>
</html>

const express = require('express');
const cors = require('cors');
const axios = require('axios');

const app = express();
const port = 3001;
app.use(cors());
app.use(express.json());

const RUNWAY_API_KEY = 'your_api_key_here'; // Replace this with your actual API key
const headers = {
  'Content-Type': 'application/json',
  'Authorization': `Bearer ${RUNWAY_API_KEY}`,
};

const tasks = {};

app.post('/api/tasks', async (req, res) => {
  const { prompt, duration } = req.body;
  const seconds = Math.min(parseInt(duration), 20);

  try {
    const genRes = await axios.post(
      'https://api.runwayml.com/v1/generate',
      {
        input: {
          prompt,
          width: 1024,
          height: 576,
          num_frames: seconds * 4
        },
        model: 'gen-2'
      },
      { headers }
    );

    const { id } = genRes.data;
    tasks[id] = { status: 'pending', videoUrl: null };

    const pollStatus = setInterval(async () => {
      try {
        const statusRes = await axios.get(`https://api.runwayml.com/v1/generate/${id}`, { headers });
        const status = statusRes.data.status;

        if (status === 'succeeded') {
          tasks[id].status = 'completed';
          tasks[id].videoUrl = statusRes.data.output;
          clearInterval(pollStatus);
        } else if (status === 'failed') {
          tasks[id].status = 'failed';
          clearInterval(pollStatus);
        }
      } catch (pollErr) {
        console.error('Polling error:', pollErr.message);
        clearInterval(pollStatus);
      }
    }, 3000);

    res.json({ taskId: id });
  } catch (err) {
    console.error(err.response?.data || err.message);
    res.status(500).json({ error: 'Failed to start video generation' });
  }
});

app.get('/api/tasks/:id', (req, res) => {
  const task = tasks[req.params.id];
  if (!task) return res.status(404).json({ error: 'Task not found' });
  res.json(task);
});

app.listen(port, () => {
  console.log(`‚úÖ Backend running on http://localhost:${port}`);
});

